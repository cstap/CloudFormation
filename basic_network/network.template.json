{
    "AWSTemplateFormatVersion" : "2010-09-09",
    "Description" : "Basic network and RDS CloudFormation",

    "Resources" : {
        "VPC" : {
            "Type" : "AWS::EC2::VPC",
            "Properties" : {
                "CidrBlock" : "10.0.0.0/16",
                "EnableDnsSupport" : "true",
                "EnableDnsHostnames" : "true",
                "InstanceTenancy" : "default",
                "Tags" : [ {"Key" : "Name", "Value" : "YOUR_APP_NAME-VPC"} ]
            }
        },
        "IGW" : {
            "Type" : "AWS::EC2::InternetGateway",
            "Properties" : {
                "Tags" : [ {"Key" : "Name", "Value" : "YOUR_APP_NAME-IGW"}]
            }
        },
        "AttachGateway" : {
            "Type" : "AWS::EC2::VPCGatewayAttachment",
            "Properties" : {
                "VpcId" : { "Ref" : "VPC" },
                "InternetGatewayId" : { "Ref" : "IGW" }
            }
        },
        "PublicSubnet" : {
            "Type" : "AWS::EC2::Subnet",
            "Properties" : {
                "VpcId" : { "Ref" : "VPC" },
                "CidrBlock" : "10.0.0.0/24",
                "AvailabilityZone" : "ap-northeast-1a",
                "Tags" : [ { "Key" : "Name", "Value" : "YOUR_APP_NAME-Public-Subnet" } ]
            }
        },
        "RouteTable" : {
            "Type" : "AWS::EC2::RouteTable",
            "Properties" : {
                "VpcId" : { "Ref" : "VPC" },
                "Tags" : [ { "Key" : "Name", "Value" : "YOUR_APP_NAME-RT" } ]
            }
        },
        "SubnetAttache" : {
            "Type" : "AWS::EC2::SubnetRouteTableAssociation",
            "Properties" : {
                "RouteTableId" : { "Ref" : "RouteTable" },
                "SubnetId" : { "Ref" : "PublicSubnet" }
            }
        },
        "Route" : {
            "Type" : "AWS::EC2::Route",
            "Properties" : {
                "RouteTableId" : { "Ref" : "RouteTable" },
                "DestinationCidrBlock" : "0.0.0.0/0",
                "GatewayId" : { "Ref" : "IGW" }
            }
        },

        "InstanceSecurityGroup" : {
            "Type" : "AWS::EC2::SecurityGroup",
            "Properties" : {
                "VpcId" : { "Ref" : "VPC" },
                "GroupDescription" : "YOUR_APP_NAME Web SecurityGroup",
                "SecurityGroupIngress" : [
                    {"IpProtocol" : "tcp", "FromPort" : "22", "ToPort" : "22", "CidrIp" : "0.0.0.0/0" },
                    {"IpProtocol" : "tcp", "FromPort" : "80", "ToPort" : "80", "CidrIp" : "0.0.0.0/0" },
                    {"IpProtocol" : "tcp", "FromPort" : "443", "ToPort" : "443", "CidrIp" : "0.0.0.0/0" }
                ]
            }
        },
        "RDSSecurityGroup" : {
            "Type" : "AWS::RDS::DBSecurityGroup",
            "Properties" : {
                "EC2VpcId" : { "Ref" : "VPC" },
                "GroupDescription" : "YOUR_APP_NAME RDS SecurityGroup",
                "DBSecurityGroupIngress" : [
                    {"IpProtocol" : "tcp", "FromPort" : "3306", "ToPort" : "3306", "CidrIp" : "10.0.0.0/16" }
                ]
            }
        },

        "RDSPrivateAZ1Subnet": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "CidrBlock": "10.0.1.0/24",
                "AvailabilityZone": "ap-southeast-1a",
                "VpcId": { "Ref": "VPC" }
            }
        },
        "RDSPrivateAZ2Subnet": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "CidrBlock": "10.0.2.0/24",
                "AvailabilityZone": "ap-southeast-1b",
                "VpcId": { "Ref": "VPC" }
            }
        },
        "RDSSubnetGroup": {
            "Type": "AWS::RDS::DBSubnetGroup",
            "Properties": {
                "DBSubnetGroupDescription": "for Multi-AZ",
                "SubnetIds": [ { "Ref": "RDSPrivateAZ1Subnet" }, { "Ref": "RDSPrivateAZ2Subnet" } ]
            }
        },

        "RDS": {
            "Type": "AWS::RDS::DBInstance",
            "Properties": {
                "AllocatedStorage": "20",
                "DBInstanceClass": "db.t2.small",
                "DBInstanceIdentifier" : "YOUR_APP_NAMEProduction",
                "DBName" : "YOUR_APP_NAMEProduction",
                "DBSecurityGroups" : [ { "Ref": "RDSSecurityGroup" } ],
                "DBSubnetGroupName": { "Ref": "RDSSubnetGroup" },
                "Engine": "MySQL",
                "MasterUsername": "root",
                "MasterUserPassword" : "password",
                "MultiAZ" : false,
                "PubliclyAccessible" : false,
                "StorageEncrypted" : false,
                "StorageType" : "gp2"
            },
            "DeletionPolicy": "Snapshot"
        },
        "RDSParameterGroup" : {
            "Type": "AWS::RDS::DBParameterGroup",
            "Properties" : {
                "Family" : "MySQL5.6",
                "Description" : "CloudFormation YOUR_APP_NAME Production DB Parameter Group",
                "Parameters" : {
                    "character_set_server" : "utf8mb4",
                    "character_set_database" : "utf8mb4",
                    "collation_server": "utf8mb4_general_ci"
                }
            }
        }
    }
}
